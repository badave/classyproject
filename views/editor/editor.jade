<!-- Button trigger modal -->
div.editor-modal.modal.fade(tabindex="-1", role="dialog", aria-hidden="true")
  .modal-dialog.modal-lg
    .modal-content
      .modal-header Content Editor
  
        button.close(type="button", data-dismiss="modal")
          span(aria-hidden="true") &times;
          span.sr-only Close
      .modal-body
        button.btn.btn-primary(type="submit", style="float:right;") Save changes
        
        include pagination
        table.editor-table
          thead
            td Title
            //- td Poster
            td URL
            td Description
            td Tags
            td(style="width:50px")
            td.add
              a.addVideo(href="javascript:;",bind-click="addVideo", style="float:right;")
                i.fa.fa-plus Add me, bitches.
              
          tbody(bind-each="this", bind-each-context="collection")
            tr
              td
                input(name="title", bind-val="title", type="text")
              td
                input(name="url", bind-val="url", type="url", required)
              //- td
                //- input(name="poster", bind-val="poster", type="url")
              td
                textarea(name="description", bind-val="description", type="text")
              td
                input(name="tags", bind-val="tags", type="text", value="",bind-attr-data-tags-id="_id")
              td.icons
                a.removeVideo(href="javascript:;",bind-click="removeVideo")
                  i.fa.fa-minus
                &nbsp;
                a.playVideo(href="javascript:;",bind-click="playVideo")
                  i.fa.fa-play
        include pagination

      
